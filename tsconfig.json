{
    "compilerOptions": {
        "outDir": "dist",
        "module": "ES2022",
        "lib": ["ES2022", "DOM"],
        "target": "ES2022",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "baseUrl": ".",
        "types": ["node"],
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "useUnknownInCatchVariables": false,
        "strict": true,
        "noImplicitAny": false,
        "alwaysStrict": true,
        "allowUnreachableCode": true,
    },
    "include": ["./src/*.ts"],
    "files": ["./node_modules/@types/mocha/index.d.ts", "./node_modules/@types/node/index.d.ts"]
}
